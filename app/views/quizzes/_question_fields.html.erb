<!-- La class="nested-fields" est ESSENTIELLE
Sans elle, le  link_to_remove_association ne marche pas -->

<div class="nested-fields">
  <div>
    <%= f.label "question" %>
    <%= f.text_field :body, placeholder: "Ajouter une question" %>
  </div>

    <%= f.fields_for :category do |category| %>
      <%= render 'category_fields', f: category %>
    <% end %>

  <%= link_to_remove_association "remove the fucking question", f %>
</div>
